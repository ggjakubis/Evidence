<Window x:Class="Oprava_Test.Okna.DialogEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Oprava_Test.Okna"
        mc:Ignorable="d"
        Title="DialogEdit" Height="300" Width="400">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF7691AF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox HorizontalAlignment="Center" Margin="0,79,0,0" TextWrapping="Wrap" Text="{Binding Jmeno}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Center" Margin="0,113,0,0" TextWrapping="Wrap" Text="{Binding Prijmeni}" VerticalAlignment="Top" Width="120"/>
        <DatePicker SelectedDate="{Binding DatumNarozeni, Mode=OneWay}" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top"/>
        <Button Content="Uložit" HorizontalAlignment="Left" Margin="89,222,0,0" VerticalAlignment="Top"/>
        <Button Content="Zahodit" HorizontalAlignment="Left" Margin="253,222,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
